GradientFrame.BorderSizePixel = 0
GradientFrame.ZIndex = 2

local Gradient = Instance.new("UIGradient")
Gradient.Parent = GradientFrame
Gradient.Color = ColorSequence.new({
	ColorSequenceKeypoint.new(0, Config.Black),
	ColorSequenceKeypoint.new(0.3, Config.DarkGray),
	ColorSequenceKeypoint.new(0.5, Config.Blood),
	ColorSequenceKeypoint.new(0.7, Config.DarkGray),
	ColorSequenceKeypoint.new(1, Config.Black),
})
Gradient.Rotation = 90
