LoadingFill.BorderSizePixel = 0
LoadingFill.ZIndex = 28



local ElapsedTime = 0
local Connection

local function StartAnimation()
	-- Start audio
	IntroSound:Play()
	Tween(IntroSound, 1, { Volume = 0.6 })
	
	-- Phase 1: Bankai activation
	Tween(Background, 0.3, { BackgroundTransparency = 0 })
	
	wait(0.2)
	
	-- Bankai lines burst
	for i, line in ipairs(BankaiLines) do
		spawn(function()
			Tween(line.Main, 0.15, { 
				BackgroundTransparency = 0.2,
			})
			Tween(line.Glow, 0.15, { BackgroundTransparency = 0.85 })
			Tween(line.Container, 0.4, {
				Size = UDim2.new(0.004, 0, 2, 0)
			}, Enum.EasingStyle.Back)
			wait(0.4)
			Tween(line.Main, 0.6, { BackgroundTransparency = 0.6 })
			Tween(line.Glow, 0.6, { BackgroundTransparency = 0.92 })
		end)
		wait(0.03)
	end
	
	-- Environment effects
	Tween(Vignette, 0.8, { ImageTransparency = 0.3 })
	Tween(GradientFrame, 1, { BackgroundTransparency = 0.7 })
	Tween(Blur, 1.2, { Size = 20 })
	Tween(ColorCorrection, 1, {
		Brightness = -0.2,
		Contrast = 0.3,
		Saturation = -0.2,
		TintColor = Color3.fromRGB(255, 230, 240)
	})
	Tween(Bloom, 1, { Intensity = 0.5 })
	
	wait(0.5)
	
	-- Phase 2: Cherry blossoms
	for i, petal in ipairs(Petals) do
		spawn(function()
			wait(math.random() * 0.5)
			Tween(petal.Frame, 0.3, { BackgroundTransparency = math.random(2, 5) / 10 })
		end)
	end
	
	wait(0.5)
	
	-- Phase 3: Logo appearance
	
	-- Logo glow
	Tween(LogoGlow, 0.6, {
		Size = UDim2.new(0.28, 0, 0.28, 0),
		ImageTransparency = 0.6
	}, Enum.EasingStyle.Back)
	
	wait(0.1)
	
	-- Main logo
	Tween(Logo, 0.5, {
		Size = UDim2.new(0.25, 0, 0.25, 0),
		ImageTransparency = 0
	}, Enum.EasingStyle.Back)
	
	-- Flash effect
	Tween(ColorCorrection, 0.1, { Brightness = 0.1 })
	wait(0.1)
	Tween(ColorCorrection, 0.3, { Brightness = -0.2 })
	
	wait(0.5)
	
	-- Phase 4: Text appearance
	Tween(TitleMain, 0.5, { TextTransparency = 0 })
	Tween(TitleStroke, 0.5, { Thickness = 2, Transparency = 0.5 })
	wait(0.1)
	Tween(TitleAccent, 0.5, { TextTransparency = 0 })
	
	wait(0.3)
	
	Tween(Subtitle, 0.4, { TextTransparency = 0.2 })
	
	wait(0.3)
	
	-- Phase 5: Loading
	Tween(LoadingBar, 0.3, { BackgroundTransparency = 0.7 })
	Tween(LoadingFill, 0.2, { BackgroundTransparency = 0 })
	
	Tween(LoadingFill, 2, {
		Size = UDim2.new(1, 0, 1, 0)
	}, Enum.EasingStyle.Linear)
	
	-- Continuous animations
	Connection = RunService.RenderStepped:Connect(function(delta)
		ElapsedTime = ElapsedTime + delta
		
		-- Cherry blossom petals
		for _, petal in ipairs(Petals) do
			local frame = petal.Frame
			local currentY = frame.Position.Y.Scale
			
			local newY = currentY + (petal.Speed * delta)
			local swayX = petal.StartX + math.sin(ElapsedTime * petal.SwaySpeed) * (petal.SwayAmount / 1000)
			
			if newY > 1.1 then
				newY = -0.1
				petal.StartX = math.random()
			end
			
			frame.Position = UDim2.new(swayX, 0, newY, 0)
			frame.Rotation = frame.Rotation + (petal.RotSpeed * delta * 60)
		end
		
		-- Logo pulse
		local pulse = 1 + math.sin(ElapsedTime * 2) * 0.03
		Logo.Size = UDim2.new(0.25 * pulse, 0, 0.25 * pulse, 0)
		LogoGlow.Size = UDim2.new(0.28 * pulse, 0, 0.28 * pulse, 0)
		
		-- Lines rotation
		LineContainer.Rotation = -ElapsedTime * 8
	end)
	
	wait(2)
	
	-- Phase 6: Complete
	Subtitle.Text = "Heroin Injection Complete"
	Tween(Subtitle, 0.2, { TextColor3 = Config.White })
	
	-- Line burst
	for i, line in ipairs(BankaiLines) do
		Tween(line.Container, 0.2, { 
			Size = UDim2.new(0.008, 0, 2.5, 0),
		})
		Tween(line.Main, 0.2, { BackgroundTransparency = 0.3 })
	end
	
	Tween(Bloom, 0.2, { Intensity = 1.5 })
	Tween(ColorCorrection, 0.1, { Brightness = 0.3 })
	wait(0.1)
	Tween(ColorCorrection, 0.3, { Brightness = -0.2 })
	Tween(Bloom, 0.3, { Intensity = 0.5 })
	
	for i, line in ipairs(BankaiLines) do
		Tween(line.Main, 0.3, { BackgroundTransparency = 0.6 })
		Tween(line.Container, 0.3, { 
			Size = UDim2.new(0.004, 0, 2, 0),
		})
	end
	
	wait(0.2)
	
	-- Phase 7: Fade out
	if Connection then
		Connection:Disconnect()
	end
	
	Tween(IntroSound, 0.3, { Volume = 0 })
	
	-- Logo fade
	Tween(Logo, 0.25, { ImageTransparency = 1, Size = UDim2.new(0.3, 0, 0.3, 0) })
	Tween(LogoGlow, 0.25, { ImageTransparency = 1 })
	
	-- Text fade
	Tween(TitleMain, 0.2, { TextTransparency = 1 })
	Tween(TitleAccent, 0.2, { TextTransparency = 1 })
	Tween(TitleStroke, 0.2, { Transparency = 1 })
	Tween(Subtitle, 0.2, { TextTransparency = 1 })
	Tween(LoadingBar, 0.2, { BackgroundTransparency = 1 })
	Tween(LoadingFill, 0.2, { BackgroundTransparency = 1 })
	
	-- Lines fade
	for i, line in ipairs(BankaiLines) do
		Tween(line.Main, 0.3, { BackgroundTransparency = 1 })
		Tween(line.Glow, 0.3, { BackgroundTransparency = 1 })
	end
	
	-- Petals fade
	for _, petal in ipairs(Petals) do
		spawn(function()
			Tween(petal.Frame, 0.3, { BackgroundTransparency = 1 })
		end)
	end
	
	-- Background fade
	Tween(GradientFrame, 0.3, { BackgroundTransparency = 1 })
	Tween(Vignette, 0.3, { ImageTransparency = 1 })
	Tween(Background, 0.4, { BackgroundTransparency = 1 })
	Tween(Blur, 0.4, { Size = 0 })
	Tween(Bloom, 0.4, { Intensity = 0 })
	Tween(ColorCorrection, 0.4, {
		Brightness = 0,
		Contrast = 0,
		Saturation = 0,
		TintColor = Color3.new(1, 1, 1)
	})
	
	wait(0.4)
	
	-- Cleanup
	IntroSound:Stop()
	IntroSound:Destroy()
	ScreenGui:Destroy()
	Blur:Destroy()
	ColorCorrection:Destroy()
	Bloom:Destroy()
end

spawn(StartAnimation)
