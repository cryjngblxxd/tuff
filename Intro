LineContainer.ZIndex = 10

for i = 1, 12 do
	local lineFrame = Instance.new("Frame")
	lineFrame.Parent = LineContainer
	lineFrame.BackgroundTransparency = 1
	lineFrame.Size = UDim2.new(0.002, 0, 2, 0)
	lineFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
	lineFrame.AnchorPoint = Vector2.new(0.5, 0.5)
	lineFrame.Rotation = i * 30
	lineFrame.ZIndex = 10
	
	local line = Instance.new("Frame")
	line.Parent = lineFrame
	line.BackgroundColor3 = Config.Pink
	line.BackgroundTransparency = 1
	line.Size = UDim2.new(1, 0, 1, 0)
