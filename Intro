	glowGradient.Transparency = NumberSequence.new({
		NumberSequenceKeypoint.new(0, 1),
		NumberSequenceKeypoint.new(0.5, 0.8),
		NumberSequenceKeypoint.new(1, 1),
	})
	
	BankaiLines[i] = {
		Container = lineFrame,
		Main = line,
		Glow = glow,
		InitialRotation = i * 30
	}
end



