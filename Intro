	NumberSequenceKeypoint.new(0, 0.7),
	NumberSequenceKeypoint.new(0.5, 0.9),
	NumberSequenceKeypoint.new(1, 0.7),
})



local Petals = {}
local PetalContainer = Instance.new("Frame")
PetalContainer.Parent = ScreenGui
PetalContainer.BackgroundTransparency = 1
PetalContainer.Size = UDim2.new(1, 0, 1, 0)
PetalContainer.ClipsDescendants = true
PetalContainer.ZIndex = 5

for i = 1, Config.PetalCount do
	local petalSize = math.random(8, 20)
	
	local petal = Instance.new("Frame")
	petal.Parent = PetalContainer
	petal.BackgroundColor3 = i % 3 == 0 and Config.Pink or i % 3 == 1 and Config.LightPink or Config.DarkPink
	petal.BackgroundTransparency = 1
	petal.Size = UDim2.new(0, petalSize, 0, petalSize * 0.8)
	petal.Position = UDim2.new(math.random(), 0, math.random() - 0.5, 0)
	petal.BorderSizePixel = 0
	petal.ZIndex = 5 + math.random(0, 3)
	petal.Rotation = math.random(0, 360)
	
	local corner = Instance.new("UICorner")
	corner.Parent = petal
	corner.CornerRadius = UDim.new(0.5, 0)
	
	local petalGradient = Instance.new("UIGradient")
	petalGradient.Parent = petal
	petalGradient.Color = ColorSequence.new({
		ColorSequenceKeypoint.new(0, Color3.new(1, 1, 1)),
		ColorSequenceKeypoint.new(1, Color3.new(0.8, 0.8, 0.8)),
	})
	petalGradient.Rotation = 45
	
	table.insert(Petals, {
		Frame = petal,
		Speed = math.random(20, 60) / 100,
		SwaySpeed = math.random(1, 3),
		SwayAmount = math.random(20, 50),
		RotSpeed = math.random(-50, 50) / 100,
		StartX = petal.Position.X.Scale,
	})
end



